DIREXE=$(HOME)/.bin

#LOAD SCIFOR LIBRARY:
#======================================================
include sfmake.inc
#======================================================

solve_pam_u0:
	@echo "============================$@======================================="
	${FC} ${OPT} -static $@.f90   ${SFMODS} ${SFLIBS} -o $(DIREXE)/$@

get_pam_delta:
	@echo "============================$@======================================="
	${FC} ${OPT} -static $@.f90   ${SFMODS} ${SFLIBS} -o $(DIREXE)/$@

clean: 
	@echo "Cleaning:"
	@rm -f *.mod *.o *~
