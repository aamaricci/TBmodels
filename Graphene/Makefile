#LOAD SCIFOR LIBRARY:
#======================================================
include sfmake.inc
#======================================================

DIREXE=$(HOME)/.bin

hc_haldane:
	@echo "======================== $@ ============================="
	${FC} ${STD} $@.f90 ${SFLIBS} -o $(DIREXE)/$@

clean: 
	@echo "Cleaning:"
	@rm -fv $(DIREXE)/hc_haldane
	@rm -f *.mod *.o *~
